<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/analog_purple</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/text_green</item>
    </style>

    <style name="AppTheme.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
